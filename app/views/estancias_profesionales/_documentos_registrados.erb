<div class="fondo-div">
  <table class="table table-striped break_space">
    <thead></thead>
    <tbody>
    <tr>
      <th class="header-table-estancias">
        <h4>Documentos Registrados</h4>
      </th>
    </tr>
    </tbody>
  </table>
  <br>
  <div class="container-fluid">
    <div class="col-md-12">
      <table class="table table-striped  table-bordered">
        <thead>
        <tr>
          <th class="header-table-estancias col-md-4">Nombre</th>
          <th class="header-table-estancias col-md-2">Entregado</th>
          <th class="header-table-estancias col-md-2">Fecha de Entrega</th>
          <th class="header-table-estancias col-md-4">Observaci√≥n</th>
        </tr>
        </thead>
        <tbody>
        <% @documentos.each do |doc| %>
          <% doc_estancia = doc[:documento] %>
          <% doc_alumno = doc[:doc_alumno] %>
          <tr class="tabla-doc">
            <td ><%= doc_estancia.nombre %></td>
            <td ><%= (doc_alumno == nil)? "NO" : "SI" %></td>
            <td ><%= (doc_alumno == nil)? "---" : doc_alumno.fecha_entrega %></td>
            <td ><%= doc_alumno.observaciones if doc_alumno && doc_estancia.observacion %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>


</div>





